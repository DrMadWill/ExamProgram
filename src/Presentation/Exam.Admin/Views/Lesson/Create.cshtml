@using Exam.Admin.Models.Lesson
@model LessonCreate

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Lesson</title>
    <link rel="icon" href="./img/Prosys.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-light text-center p-3">
        <h1 class="header-title">Add New Lesson</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Student")">Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Exam")">Exams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Lesson")">Lessons</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="LessonCode">Lesson Code</label>
                <input type="text" class="form-control" id="LessonCode" name="LessonCode" maxlength="3" required />
                <div class="invalid-feedback">Lesson code is required and must be at most 3 characters long.</div>
            </div>
            <div class="form-group">
                <label for="LessonName">Lesson Name</label>
                <input type="text" class="form-control" id="LessonName" name="LessonName" maxlength="30" required />
                <div class="invalid-feedback">Lesson name is required and must be at most 30 characters long.</div>
            </div>
            <div class="form-group">
                <label for="Class">Class</label>
                <input type="number" class="form-control" id="Class" name="Class" required />
                <div class="invalid-feedback">Class is required.</div>
            </div>
            <div class="form-group">
                <label for="TeacherFirstName">Teacher First Name</label>
                <input type="text" class="form-control" id="TeacherFirstName" name="TeacherFirstName" maxlength="20" required />
                <div class="invalid-feedback">Teacher's first name is required and must be at most 20 characters long.</div>
            </div>
            <div class="form-group">
                <label for="TeacherLastName">Teacher Last Name</label>
                <input type="text" class="form-control" id="TeacherLastName" name="TeacherLastName" maxlength="20" required />
                <div class="invalid-feedback">Teacher's last name is required and must be at most 20 characters long.</div>
            </div>
            <button type="submit" class="btn btn-success">Add Lesson</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <span class="text-muted">© 2024 Admin Panel by Hüseyn Jafarov. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
    <script>
        document.getElementById('Class').addEventListener('input', function() {
            if (this.value < 1 || this.value > 9) {
                this.setCustomValidity('Please enter a number between 1 and 9.');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>

</body>
</html>
