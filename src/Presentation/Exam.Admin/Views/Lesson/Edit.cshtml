@using Exam.Admin.Models.Lesson
@model LessonList

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Lesson</title>
    <link rel="icon" href="./img/Prosys.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-light text-center p-3">
        <h1 class="header-title">Edit Lesson</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Student")">Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Exam")">Exams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Lesson")">Lessons</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label for="LessonCode">Lesson Code</label>
                <input type="text" maxlength="3" class="form-control" id="LessonCode" name="LessonCode" value="@Model.LessonCode" required />
            </div>
            <div class="form-group">
                <label for="LessonName">Lesson Name</label>
                <input type="text" maxlength="30" class="form-control" id="LessonName" name="LessonName" value="@Model.LessonName" required />
            </div>
            <div class="form-group">
                <label for="Class">Class</label>
                <input type="number" step="0.01" class="form-control" id="Class" name="Class" value="@Model.Class" required />
            </div>
            <div class="form-group">
                <label for="TeacherFirstName">Teacher First Name</label>
                <input type="text" maxlength="20" class="form-control" id="TeacherFirstName" name="TeacherFirstName" value="@Model.TeacherFirstName" required />
            </div>
            <div class="form-group">
                <label for="TeacherLastName">Teacher Last Name</label>
                <input type="text" maxlength="20" class="form-control" id="TeacherLastName" name="TeacherLastName" value="@Model.TeacherLastName" required />
            </div>

            <button type="submit" class="btn btn-primary">Update Lesson</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <span class="text-muted">© 2024 Admin Panel by Hüseyn Jafarov. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    document.getElementById('Class').addEventListener('input', function() {
        if (this.value < 1 || this.value > 9) {
            this.setCustomValidity('Please enter a number between 1 and 9.');
        } else {
            this.setCustomValidity('');
        }
    });
</script>

</body>
</html>
